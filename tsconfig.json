{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",                         
    "resolveJsonModule": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true, 
    "outDir": "./dist",
    "include": ["src/**/*"]
  }
}
